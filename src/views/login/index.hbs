<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
  <!-- Título del formulario -->
  <h1 class="text-5x1 font-bold text-center">INICIAR SESIÓN</h1>  

  <!-- Formulario para iniciar sesión -->
  <form method="POST" class="mt-4" name="loginForm" onsubmit="encriptarClave()">
    <!-- Campo de entrada para el nombre -->
    <input type="text" name="nombre" placeholder="Nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
    
    <!-- Campo de entrada para la contraseña -->
    <input type="password" name="clave" id="clave" placeholder="Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
    
    <!-- Botón para enviar el formulario -->
    <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">Iniciar Sesión</button>
    
    <!-- Mensaje de error si el inicio de sesión falla -->
    {{#if error}}
      <p class="text-red-500 font-bold text-lg my-3">* {{error}}</p>
    {{/if}}  
  </form>
  
  <!-- Script para encriptar la contraseña antes de enviarla -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
  <script>
    function encriptarClave() {
      const password = document.getElementById("clave").value;
      const hash = CryptoJS.MD5(password).toString();
      document.getElementById("clave").value = hash;
    }
  </script>
</div>
